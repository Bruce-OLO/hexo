<% if (post.albums && post.albums.length){ %>
<div class="justified-gallery" id="gallery">
  <% post.albums.forEach(function(photo){ %>
  <div>
    <a class="fancybox" data-fancybox="images" data-caption="<%- photo[1] %>" target="_blank" href="<%- photo[0] %>"
    	rel="gallery_<%= post._id %>" title="<%- photo[1] %>">
      <img src="<%- photo[0] %>" itemprop="image" alt="<%- photo[1] %>">
    </a>
  </div>
  <% }) %>
</div>
<% } %>